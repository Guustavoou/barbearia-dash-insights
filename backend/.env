PORT=3001
NODE_ENV=development

# Neon PostgreSQL Configuration
# Replace with your actual Neon connection string
DATABASE_URL=postgresql://unclic_owner:your_password@your-host.neon.tech/unclic_db?sslmode=require

# Legacy SQLite (backup)
SQLITE_DATABASE_URL=./database.db

# Security
JWT_SECRET=unclic-super-secret-jwt-key-for-development-only
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Database Configuration
DB_TYPE=postgresql
DB_HOST=your-host.neon.tech
DB_PORT=5432
DB_NAME=unclic_db
DB_USER=unclic_owner
DB_PASS=your_password
